<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ResetPassword">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="353dp"
        android:layout_height="142dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="29dp"
        android:text="You will receive an email when you provide your email address and click send button. Please find the instructions in the email to reset password."
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/emailToReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailToReset"
        android:layout_width="353dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="29dp"
        android:hint="Enter your email"
        app:layout_constraintBottom_toTopOf="@+id/sendEmailBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/sendEmailBtn"
        android:layout_width="353dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="315dp"
        android:background="#AAC6AB"
        android:text="send email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailToReset" />
</androidx.constraintlayout.widget.ConstraintLayout>